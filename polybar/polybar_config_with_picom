[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.module-background}
; label-focused-underline= ${colors.primary}
label-focused-padding = 2
label-focused-foreground = ${colors.highlighted-text}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}
label-visible-foreground = ${colors.highlighted-text}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.pref-text-color}
format-underline = ${colors.secondary}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.pref-text-color}
format-underline = ${colors.secondary}
label = %gb_used%

[module/date]
type = internal/date
interval = 5

date = "%a,%b. %d"

time ="%I:%M %p"

format = 󰥔 <label>
format-foreground= #ebcb8b
; format-underline = #fff

label =%time% %date% 
label-foreground = #fff

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = 🔇 muted
label-muted-foreground = ${colors.alert}

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.tertiary}
bar-volume-foreground-1 = ${colors.tertiary}
bar-volume-foreground-2 = ${colors.tertiary}
bar-volume-foreground-3 = ${colors.tertiary}
bar-volume-foreground-4 = #d08770
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = ${colors.alert}
bar-volume-gradient = false
bar-volume-indicator = 🐄
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.pref-text-color}

[module/filesystem]
type = internal/fs

; Mountpoints to display
; Default: / (new in version 3.7.0)
mount-0 = /

; Seconds to sleep between updates
; Default: 30
interval = 10

; Display fixed precision values
; Default: false
fixed-values = true

; Spacing (number of spaces, pixels, points) between entries
; Default: 2
spacing = 4

; Default: 90
; New in version 3.6.0
warn-percentage = 75
label-mounted = %mountpoint%:  %used% of %total%


[module/player-mpris-tail]
type = custom/script
exec = ~/dotfiles_and_themes/polybar/scripts/player-mpris-tail.py -f '{icon} {:artist:t20:{artist}:}{:artist: - :}{:t20:{title}:}'
tail = true
click-middle = ~/dotfiles_and_themes/polybar/scripts/player-mpris-tail.py previous &
click-right = ~/dotfiles_and_themes/polybar/scripts/player-mpris-tail.py next &
click-left = ~/dotfiles_and_themes/polybar/scripts/player-mpris-tail.py play-pause &

